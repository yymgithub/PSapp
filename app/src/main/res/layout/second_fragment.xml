<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">
    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
       >
    <TextView
    android:id="@+id/txt_stop"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="@drawable/tab_menu_bg"
    android:drawablePadding="3dp"
    android:drawableLeft="@drawable/icon_car_stop"
    android:gravity="left"
    android:paddingTop="10px"
    android:text="停车"
    android:textSize="12sp"
    />
        <TextView
            android:id="@+id/txt_car_on"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_car_on"
            android:gravity="left"
            android:paddingTop="10px"
            android:text="启动变频器"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/txt_car_off"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_car_off"
            android:gravity="left"
            android:paddingTop="10px"
            android:text="变频器OFF"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/txt_alarm_on"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_car_alarm"
            android:gravity="left"
            android:paddingTop="10px"
            android:text="报警"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/txt_alarm_off"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.98"
            android:background="@drawable/tab_menu_bg"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/icon_car_alarm_off"
            android:gravity="left"
            android:paddingTop="10px"
            android:text="报警复位"
            android:textSize="12sp"
            />
    </LinearLayout>
    <com.hitomi.cmlibrary.CircleMenu
        android:id="@+id/circle_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="400dp"
        android:layout_height="360dp" />

</RelativeLayout>