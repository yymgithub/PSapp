<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_bg_show_para"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="105dp"
            android:paddingTop="295dp">

            <TextView
                android:id="@+id/load_speed1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/load_power1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/load_niuju1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1111"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingTop="27dp">

            <TextView
                android:id="@+id/txt_tep_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/txt_kaidu_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="155dp"
            android:paddingTop="305dp">

            <TextView
                android:id="@+id/load_speed2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/load_power2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/load_niuju2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1111"
                android:textColor="@color/red" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/drive_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/drive_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textColor="@color/red" />

            <TextView
                android:id="@+id/drive_niuju"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="1111"
                android:textColor="@color/red" />

        </LinearLayout>
    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_backward_pic"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/tab_menu_bg"
            android:drawableLeft="@mipmap/back_pic"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingTop="10px"
            android:text="返回"
            android:textColor="@color/mainColor"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>
